<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DailyWordFragment"
    android:padding="10dp">

    <TextView android:id="@+id/tvKanji"
        android:text="人"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tvHiragana"
        android:layout_marginBottom="10dp"/>

    <TextView android:id="@+id/tvHiragana"
        android:text="ひと"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvRomaji"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView android:id="@+id/tvRomaji"
        android:text="hito"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView android:id="@+id/tvMeaning"
        android:text="orang"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvRomaji"
        android:layout_marginTop="10dp"/>

    <TextView android:id="@+id/tvExample"
        android:text="あの人は先生です。 (Ano hito wa sensei desu.) - Orang itu adalah guru."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvMeaning"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_shuffle"
        android:text="@string/shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvExample"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>